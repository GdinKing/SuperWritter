<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical">

    <include
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="46dp" />


    <LinearLayout
        android:id="@+id/my_rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/middle_padding"
            android:scaleType="centerCrop"
            android:background="@null"
            android:src="@drawable/ic_default_head"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="登录/注册"
            android:background="@null"
            android:textColor="@color/text_1"
            android:textSize="@dimen/text_large" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/normal_padding"
            android:text="夜间模式"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_dark"
            android:textSize="@dimen/text_large" />

        <it.beppi.tristatetogglebutton_library.TriStateToggleButton
            android:id="@+id/toggle_dark"
            android:layout_width="50dp"
            android:layout_height="25dp"
            app:tbIsMidSelectable="false"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_white_gray"
        android:clickable="true"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_account"
        android:drawableRight="@mipmap/icon_right_grey"
        android:padding="@dimen/normal_padding"
        android:text="绑定账号"
        android:textSize="@dimen/text_large" />
    <TextView
        android:id="@+id/tv_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_white_gray"
        android:clickable="true"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_publish"
        android:drawableRight="@mipmap/icon_right_grey"
        android:padding="@dimen/normal_padding"
        android:text="我的发布"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/tv_draft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_white_gray"
        android:clickable="true"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_draft"
        android:drawableRight="@mipmap/icon_right_grey"
        android:padding="@dimen/normal_padding"
        android:text="草稿箱"
        android:textSize="@dimen/text_large" />
    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_white_gray"
        android:clickable="true"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_settings"
        android:drawableRight="@mipmap/icon_right_grey"
        android:padding="@dimen/normal_padding"
        android:text="设置"
        android:textSize="@dimen/text_large" />

</LinearLayout>