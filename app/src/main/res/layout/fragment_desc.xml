<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="100dp"
                android:layout_height="133.3dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/item_novel_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_add_gray" />

            <TextView
                android:id="@+id/tv_cover"
                android:layout_width="100dp"
                android:layout_height="133.3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/item_novel_bg"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:visibility="gone"
                android:padding="5dp"
                android:textColor="@color/blue"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:text="类型："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:textColor="@color/text_3"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:text="作者："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:textColor="@color/text_3"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:text="字数："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:text="0字"
                android:textColor="@color/text_3"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/btn_white_gray"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_right_grey"
            android:padding="@dimen/middle_padding"
            android:text="作品简介"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="start"
            android:minHeight="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:singleLine="false"
            android:text="暂无简介"
            android:textIsSelectable="true"
            android:textColor="@color/text_3"
            android:textSize="@dimen/text_normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/btn_white_gray"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_right_grey"
            android:padding="@dimen/middle_padding"
            android:text="角色设定"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="start"
            android:minHeight="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:singleLine="false"
            android:text="暂无角色设定，点击编辑"
            android:textIsSelectable="true"
            android:textColor="@color/text_3"
            android:textSize="@dimen/text_normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/btn_white_gray"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_right_grey"
            android:padding="@dimen/middle_padding"
            android:text="故事大纲"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="start"
            android:minHeight="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:singleLine="false"
            android:textIsSelectable="true"
            android:text="暂无故事大纲，点击编辑"
            android:textColor="@color/text_3"
            android:textSize="@dimen/text_normal"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>