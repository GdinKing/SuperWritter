<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:simple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants">


    <net.wujingchao.android.view.SimpleTagImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_novel_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_add_gray"
        android:visibility="gone"
        simple:simple_tag_background_color="@color/red"
        simple:simple_tag_textColor="@android:color/white"
        simple:simple_tag_textSize="10sp"
        simple:simple_tag_width="14dp" />

    <TextView
        android:id="@+id/tv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_novel_bg"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/trans_blue"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans_black"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_select"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/selector_book_select"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>